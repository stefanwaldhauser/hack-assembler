{
  "name": "hack_assembler",
  "version": "0.1.0",
  "description": "This is an assembler for the hack machine language. Project 6 in https://www.nand2tetris.org/",
  "main": "lib/index.js",
  "bin": {
    "hack-assembler": "lib/index.js"
  },
